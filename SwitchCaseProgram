import java.util.Scanner;

public class SwitchCase {
public static void main(String[] args) {
	int ch;
	System.out.println("Menu Driven Program");            //Using integer values as case numbers
	System.out.println("1.Hi");
	System.out.println("2.Hey");     
	System.out.println("3.Hello");
	System.out.println("Please enter your choice: ");
	Scanner s=new Scanner(System.in);
	ch=s.nextInt();
	switch(ch) {
	    case 1:{
		      System.out.println("You said Hi.");
	     }
	    break;
	    case 2:{
		      System.out.println("You said Hey.");
	    }
	    break;
	     case 3:{
		     System.out.println("You said Hello.");
	    }
	   break;
	   default:{
		    System.out.println("Invalid choice.Please enter correct choice");
	   }
}
	
	/* Scanner s=new Scanner(System.in);
	System.out.println("Menu Driven Program");  //Using character values as case numbers
	System.out.println("a.Hi");
	System.out.println("b.Hey");     
	System.out.println("c.Hello");
	System.out.println("Please enter your choice: ");
	String sc=s.next();
	char ch=sc.charAt(0);
	switch(ch) {
	    case 'a':{
		      System.out.println("You said Hi.");
	    }
	    break;
	    case 'b':{
		      System.out.println("You said Hey.");
	    }
	    break;
	    case 'c':{
		      System.out.println("You said Hello.");
	    }
	    break;
	    default:{
		      System.out.println("Invalid choice.Please enter correct choice");
	    }
}*/

}
}
